<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="302dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="16dp"
    android:background="#0C0C0C"
    android:layout_marginBottom="10dp">

    <ImageView
        android:id="@+id/imageMovie"
        android:layout_width="wrap_content"
        android:layout_height="220dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="@string/title_todo" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/label_tile"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/imageMovie"
        app:layout_constraintStart_toEndOf="@id/imageMovie"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingHorizontal="10dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:fontFamily="serif"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/titleMovie"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:fontFamily="sans-serif-thin"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/tvTitle"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/tvPopularity"
        android:layout_width="0dp"
        android:layout_marginStart="10dp"
        android:layout_height="wrap_content"
        android:text="@string/title_popularity"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/titleMovie"
        app:layout_constraintStart_toEndOf="@id/imageMovie"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingHorizontal="10dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:fontFamily="serif"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/popularityMovie"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:fontFamily="sans-serif-thin"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/tvPopularity"
        app:layout_constraintTop_toBottomOf="@id/tvPopularity"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/tvReleaseDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/title_date_release"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/popularityMovie"
        app:layout_constraintStart_toEndOf="@id/imageMovie"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingHorizontal="10dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:fontFamily="serif"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/releaseDateMovie"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:fontFamily="sans-serif-thin"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/tvReleaseDate"
        app:layout_constraintTop_toBottomOf="@id/tvReleaseDate"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>